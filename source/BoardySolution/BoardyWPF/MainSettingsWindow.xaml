<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BoardyWPF"
        xmlns:Controls="clr-namespace:BoardyWPF.Controls"
    xmlns:fa5="http://schemas.fontawesome.com/icons/" x:Class="BoardyWPF.MainSettingsWindow"
        mc:Ignorable="d"
        BorderBrush="Black"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen"
        Title="MainSettingsWindow" Height="450" Width="800"
        Background="#2c3d4d">
    <Canvas>
        <ComboBox Name="cbAudioDevices" Canvas.Left="110" Canvas.Top="10" Width="238" SelectionChanged="cbAudioDevices_SelectionChanged"/>
        <Button Name="SaveButton" Content="SALVA" Canvas.Left="700" Canvas.Top="384" Width="88" Height="38" Click="SaveButton_Click"/>
        <ComboBox x:Name="cbMidiInDevice" Canvas.Left="24" Canvas.Top="81" Width="238" SelectionChanged="cbMidiInDevice_SelectionChanged" />
        <ComboBox x:Name="cbMidiOutDevice" Canvas.Left="284" Canvas.Top="81" Width="238" />
        <ComboBox x:Name="cbMidiOutRepeaterDevice" Canvas.Left="536" Canvas.Top="81" Width="238" />

    </Canvas>
</Window>